<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/oxford_blue"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:theme="@style/DarkAppTheme"
        tools:context=".activities.MainActivity">

    <TextView
            android:id="@+id/txt_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/gwent_helper"
            android:theme="@style/Text.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/img_user1_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_photo"
            app:layout_constraintBottom_toTopOf="@id/f_user1_name"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/img_user2_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_screen_title" />

    <TextView
            android:id="@+id/txt_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="@string/vs"
            android:theme="@style/Text.Title"
            app:layout_constraintBottom_toTopOf="@id/btn_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_screen_title" />

    <ImageView
            android:id="@+id/img_user2_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_photo"
            app:layout_constraintBottom_toTopOf="@id/f_user2_name"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_user1_avatar"
            app:layout_constraintTop_toBottomOf="@id/txt_screen_title" />

    <EditText
            android:id="@+id/f_user1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/user1_name_hint"
            android:imeOptions="flagNoExtractUi"
            android:inputType="text"
            android:maxLength="15"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/btn_play"
            app:layout_constraintEnd_toStartOf="@id/f_user2_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_user1_avatar" />

    <EditText
            android:id="@+id/f_user2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/user2_name_hint"
            android:imeOptions="flagNoExtractUi"
            android:inputType="text"
            android:maxLength="15"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/btn_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/f_user1_name"
            app:layout_constraintTop_toBottomOf="@+id/img_user2_avatar" />

    <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play"
            app:layout_constraintBottom_toTopOf="@id/btn_scores"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f_user2_name" />
    <Button
            android:id="@+id/btn_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scores"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_play" />

</androidx.constraintlayout.widget.ConstraintLayout>