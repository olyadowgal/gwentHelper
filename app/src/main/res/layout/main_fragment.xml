<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/oxford_blue"
        android:theme="@style/DarkAppTheme"
        tools:context=".activities.MainActivity">

    <TextView
            android:id="@+id/txt_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gwent_helper"
            android:theme="@style/Text.Title"
            app:layout_constraintBottom_toTopOf="@id/txt_user1_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/txt_user1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/user1_name_hint"
            android:imeOptions="flagNoExtractUi"
            android:lines="1"
            android:maxLength="15"
            app:layout_constraintBottom_toTopOf="@+id/txt_user2_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_screen_title"
            app:layout_constraintVertical_chainStyle="packed" />

    <EditText
            android:id="@+id/txt_user2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/user2_name_hint"
            android:imeOptions="flagNoExtractUi"
            android:lines="1"
            android:maxLength="15"
            app:layout_constraintBottom_toTopOf="@+id/btn_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_user1_name"
            app:layout_constraintVertical_chainStyle="packed" />

    <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_user2_name" />

</androidx.constraintlayout.widget.ConstraintLayout>