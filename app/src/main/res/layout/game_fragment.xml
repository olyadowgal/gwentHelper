<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_user2">

        <ImageView
                android:id="@+id/iv_user1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_placeholder_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="User 1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_user1" />

        <TextView
                android:id="@+id/tv_user1_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Points 1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user1" />

        <ImageView
                android:id="@+id/iv_user1_coin1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_coin"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/tv_user1_points"
                app:layout_constraintTop_toBottomOf="@id/iv_user1" />

        <ImageView
                android:id="@+id/iv_user1_coin2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_coin"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/tv_user1_points"
                app:layout_constraintTop_toBottomOf="@id/iv_user1_coin1" />
        <Button
                android:id="@+id/btn_user1_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_user1_points"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_user1"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:id="@+id/iv_user2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_placeholder_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="User 2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_user2" />

        <TextView
                android:id="@+id/tv_user2_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Points 2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user2" />

        <ImageView
                android:id="@+id/iv_user2_coin1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_coin"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/tv_user2_points"
                app:layout_constraintTop_toBottomOf="@id/iv_user2" />

        <ImageView
                android:id="@+id/iv_user2_coin2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_coin"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/tv_user2_points"
                app:layout_constraintTop_toBottomOf="@id/iv_user2_coin1" />
        <Button
                android:id="@+id/btn_user2_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_user2_points"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
            android:id="@+id/iv_vertical_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cl_user1"
            app:layout_constraintTop_toTopOf="parent">
        <Button
                android:id="@+id/btn_user1"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="user1"/>
        <Button
                android:id="@+id/btn_user2"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="User2"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
            android:id="@+id/ll_user1_close_combat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_vertical_buttons"
            app:layout_constraintBottom_toTopOf="@id/ll_user1_long_range"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/txt_counter_user1_close_combat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/zero"
                app:layout_constraintStart_toEndOf="@id/iv_vertical_buttons"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cards_user1_close_combat"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_margin="16dp"
                android:orientation="horizontal" />

        <Button
                android:id="@+id/btn_add_user1_close_combat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:text="+" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_user1_long_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_vertical_buttons"
            app:layout_constraintTop_toBottomOf="@id/ll_user1_close_combat"
            app:layout_constraintBottom_toTopOf="@id/ll_user1_siege">

        <TextView
                android:id="@+id/txt_counter_user1_long_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/zero"
                app:layout_constraintStart_toEndOf="@id/iv_vertical_buttons"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cards_user1_long_range"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_margin="16dp"
                android:orientation="horizontal" />

        <Button
                android:id="@+id/btn_add_user1_long_range"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:text="+" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_user1_siege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_vertical_buttons"
            app:layout_constraintTop_toBottomOf="@id/ll_user1_long_range"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/txt_counter_user1_siege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/zero"
                app:layout_constraintStart_toEndOf="@id/iv_vertical_buttons"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cards_user1_siege"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_margin="16dp"
                android:orientation="horizontal" />

        <Button
                android:id="@+id/btn_add_user1_siege"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:text="+" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>