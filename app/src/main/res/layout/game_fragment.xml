<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <com.dowgalolya.gwenthelper.widgets.UserView
            android:id="@+id/cv_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/cv_weather"
            app:layout_constraintEnd_toStartOf="@id/iv_vertical_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.dowgalolya.gwenthelper.widgets.WeatherView
            android:id="@+id/cv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/cv_user2"
            app:layout_constraintEnd_toStartOf="@id/iv_vertical_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_user1" />

    <com.dowgalolya.gwenthelper.widgets.UserView
            android:id="@+id/cv_user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_vertical_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_weather" />

    <View
            android:id="@+id/iv_vertical_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cv_weather"
            app:layout_constraintTop_toTopOf="parent" />

    <com.dowgalolya.gwenthelper.widgets.CardsRowView
            android:id="@+id/cv_close_combat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/cv_long_range"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_vertical_divider"
            app:layout_constraintTop_toTopOf="parent" />

    <com.dowgalolya.gwenthelper.widgets.CardsRowView
            android:id="@+id/cv_long_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/cv_siege"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_vertical_divider"
            app:layout_constraintTop_toBottomOf="@id/cv_close_combat" />

    <com.dowgalolya.gwenthelper.widgets.CardsRowView
            android:id="@+id/cv_siege"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_vertical_divider"
            app:layout_constraintTop_toBottomOf="@id/cv_long_range" />


</androidx.constraintlayout.widget.ConstraintLayout>