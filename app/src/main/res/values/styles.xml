<resources>

    <!-- Base application theme. -->

    <!--region Text-->

    <style name="Text" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/oxford_blue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/oxford_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Text.Placeholder">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DarkThemeText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DarkThemeText.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DarkThemeText.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">36sp</item>
    </style>




    <!--endregion-->

    <!--region Field-->

    <style name="DarkThemeField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--endregion-->

    <!--region Button-->

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">6dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Button.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">?colorOnPrimary</item>
    </style>
    <!--endregion-->

</resources>
