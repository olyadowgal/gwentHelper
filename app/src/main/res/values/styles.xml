<resources>

    <!-- Base application theme. -->

    <!--region Text-->

    <style name="Text" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/oxford_blue</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/mid_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">36pt</item>
    </style>

    <style name="DarkThemeText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DarkThemeText.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="DarkThemeText.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">36pt</item>
    </style>


    <!--endregion-->

    <!--region Field-->

    <style name="DarkThemeField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--endregion-->

    <!--region Button-->

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">6dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Button.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>
    <!--endregion-->

</resources>
